<link rel="stylesheet" href="/public/styles.css">

<div class="perfil-usuario">
    <div class="datos-usuario">
        {{#perfil}}

            <h2>{{nombreUsuario}}</h2>
            <br>
            <img src="/public/images/{{foto}}" > </img>
            <br><br>
            <p>Mail: {{mail}}</p>
            <br>
            <p>Puntaje maximo alcanzado: {{puntajeMaximo}}</p>

        {{/perfil}}
    </div>


    <div class="resumen-partidas">
        <h3>Partidas jugadas</h3><br>

            <ul>
            {{#partidas}}
                <li>Partida {{indice}} - Puntaje {{puntaje}}</li><br>
            {{/partidas}}
            </ul>
    </div>
</div>
