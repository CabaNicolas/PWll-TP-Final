{{/nombreUsuario}}
{{#mensajeExito}}
    <p class="exito">{{.}}</p>
{{/mensajeExito}}
    <div class="botones-lobby">
        <div class="botones-lobby-child1">

            <p class="boton-puntaje"><img class="img-estrella" src="/public/images/estrella.png" alt="Imagen estrella">Puntaje MÃ¡ximo: {{puntajeMaximo}}</p>
